<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:card_view="http://schemas.android.com/apk/res-auto"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">


        <android.support.v7.widget.CardView
            android:layout_marginTop="7dp"
            android:layout_width="match_parent"
            android:padding="@dimen/md_simplelistitem_padding_top"
            android:layout_height="wrap_content">
         <LinearLayout android:id="@+id/calorie_layout"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"

                       android:elevation="@dimen/normal_elevation"
                       android:orientation="vertical">
           <RelativeLayout
                   android:layout_height="0dp"
                   android:layout_width="match_parent"
               android:layout_weight="0.6"
                   android:padding="15dp"
                   android:elevation="@dimen/normal_elevation"
                   android:layout_gravity="center"
                   android:background="@color/white"
                   android:weightSum="1">

           <ImageView
                   android:layout_width="20dp"
                   android:layout_height="25dp"
                   android:background="@drawable/caloriesblack"
                   android:layout_margin="10dp" android:id="@+id/imageView3"/>

           <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Calories Burnt"
                   android:textColor="@color/primary_pink"
                   android:layout_gravity="center"
                   android:layout_centerVertical="true" android:layout_toRightOf="@+id/imageView3"
                   android:layout_toEndOf="@+id/imageView3" android:id="@+id/textView2"/>

            <TextView
                    android:id="@+id/mystats_calorietv"
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:text="2.71"
                    android:textStyle="bold"
                    android:background="@color/primary_pink"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                  />
       </RelativeLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/secondary_dark_purple"

                android:orientation="horizontal"
                android:padding="@dimen/md_button_padding_frame_side"
                android:weightSum="5"
        >
            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/p2b_icon"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:layout_marginLeft="10dp" />

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Goal : "
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:gravity="end"
                    android:layout_weight="2.3"
                    android:textSize="@dimen/medium_text_size"
            />

            <TextView
                    android:id="@+id/mystats_calories_goal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="400"
                    android:maxLines="1"

                    android:textColor="@color/secondary_red"
                    android:layout_gravity="center"

                    android:layout_weight="0.8"

                    android:textSize="@dimen/medium_text_size"
            />
        </LinearLayout>
         </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:padding="@dimen/md_simplelistitem_padding_top"
            android:layout_height="wrap_content">
        <LinearLayout
                      android:id="@+id/distance_layout"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"

                      android:elevation="@dimen/normal_elevation"
                      android:orientation="vertical"
        android:layout_marginTop="10dp">
            <RelativeLayout
                    android:layout_height="0dp"
                    android:layout_width="match_parent"
                    android:layout_weight="0.6"
                    android:padding="15dp"
                    android:elevation="@dimen/normal_elevation"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:weightSum="1">

                <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/cycle_black"
                        android:layout_margin="10dp" android:id="@+id/caloriesview"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Distance Travelled"
                        android:textColor="@color/primary_pink"
                        android:layout_gravity="center"
                        android:layout_centerVertical="true" android:layout_toRightOf="@+id/caloriesview"
                        android:layout_toEndOf="@+id/caloriesview"/>

                <TextView
                        android:id="@+id/mystats_distancetv"
                        android:layout_width="90dp"
                        android:layout_height="35dp"
                        android:text="0.05 Km"
                        android:textStyle="bold"
                        android:background="@color/primary_pink"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                />
            </RelativeLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@color/secondary_dark_purple"

                    android:orientation="horizontal"
                    android:padding="@dimen/md_button_padding_frame_side"
                    android:weightSum="5"
            >
                <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/p2b_icon"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:layout_marginLeft="10dp" />

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Goal : "
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:gravity="end"
                    android:layout_weight="2.3"
                        android:textSize="@dimen/medium_text_size"
                />

                <TextView
                        android:id="@+id/mystats_distance_goal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="100 Km"
                        android:maxLines="1"

                        android:textColor="@color/secondary_red"
                        android:layout_gravity="center"

                    android:layout_weight="0.8"

                        android:textSize="@dimen/medium_text_size"
                />
            </LinearLayout>
        </LinearLayout>
</android.support.v7.widget.CardView>

    </LinearLayout>
</layout>