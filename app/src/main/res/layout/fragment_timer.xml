
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"

              android:weightSum = "3"
              >

    <FrameLayout
            android:id="@+id/container_above"
              android:padding="@dimen/md_simplelistitem_padding_top"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            />




    <LinearLayout
            android:id="@+id/layout_below"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="10dp"
            android:layout_weight="1.8"
            android:weightSum="0.61"
            android:orientation="vertical">


        <include android:id="@+id/layout_counter_cal"
            layout="@layout/timer_main"
            android:layout_width="match_parent"

            android:layout_height="0dp"
            android:layout_weight="0.12"/>


        <include
            android:id="@+id/layout_timer_sub_replace"
            layout="@layout/timer_sub_replace"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            />



        <include
            android:id="@+id/layout_ghostrider"
            layout="@layout/timer_ghost"
            android:layout_width="match_parent"

            android:layout_height="0dp"
            android:layout_weight="0.13"
            />


        <include
            android:id="@+id/layout_cmiyc"
            layout="@layout/timer_cmiyc"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.13"/>

    </LinearLayout>


    <FrameLayout
        android:id="@+id/container_below"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.8"
        android:padding="5dp"/>

</LinearLayout>
</layout>