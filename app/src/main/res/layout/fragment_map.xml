<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:map="http://schemas.android.com/apk/res-auto">
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    >


    <include
        android:id="@+id/map_header"
        layout="@layout/map_header" />

    <include
        android:id="@+id/track_details"
        layout="@layout/map_save_track"
          />
    <include
        android:id="@+id/ghost_details"
        layout="@layout/map_ghostrider_header"
        />

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        />

</LinearLayout>
</layout>