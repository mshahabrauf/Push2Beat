<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/main_mystats_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp" >

        <RelativeLayout
                android:id="@+id/mystats_tab_layout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >


            <RelativeLayout
                    android:id="@+id/mystats_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/secondary_dark_black"
                    android:layout_marginTop="110dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp">


                <TextView
                        android:id="@+id/mystats_profile_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Maaz Khursheed"
                        android:textColor="@color/white"
                        android:textSize="25sp"
                        android:gravity="center"
                        android:padding="30dp"/>
            </RelativeLayout>
            <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/mystats_profile_image"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/placeholder"
                    app:civ_border_width="4dp"
                    app:civ_border_color="@color/primary_pink"
                    android:scaleType="centerCrop"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="40dp"/>

        </RelativeLayout>

        <include
            android:id="@+id/loader_layout"
            layout="@layout/progress" />



        <LinearLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >



<!--
            <android.support.v7.widget.RecyclerView
                android:id="@+id/mystats_track_recycler_view"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:paddingLeft="13dp"
                android:paddingStart="13dp"
                android:paddingRight="13dp"
                android:paddingEnd="13dp"/>
-->
            <android.support.v7.widget.RecyclerView
                android:id="@+id/mystats_recycler_view"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                

                />






        </LinearLayout>



    </LinearLayout>
</layout>