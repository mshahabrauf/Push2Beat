<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:id="@+id/time_sub_replace_row"
        android:layout_width="match_parent"
        android:elevation="@dimen/normal_elevation"
        android:gravity="center"
        android:clickable="false"
        android:layout_height="wrap_content"
        android:paddingTop="7dp"
        android:paddingBottom="10dp"
        android:background="@color/secondary_dark_purple">


        <LinearLayout
            android:id="@+id/item_bottom"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/secondary_dark_purple"

            android:orientation="horizontal"
            android:padding="5dp"

            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/p2b_icon"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_gravity="center"
                android:layout_weight="2.0"
                />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.85"
                android:layout_gravity="right"
                android:paddingLeft="20dp"

                android:src="@drawable/calories_red"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/calories_burn"
                android:textColor="@color/white"
                android:layout_gravity="center"

                android:gravity="center"
                android:layout_weight="1.8"

                android:textSize="@dimen/small_text_size"
                />

            <TextView
                android:id="@+id/burn_calories"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="569+"

                android:maxLines="1"
                android:textStyle="bold"
                android:textColor="@color/secondary_red"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="0.7"

                android:textSize="@dimen/small_text_size"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_add_trackname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@color/white"
            android:padding="@dimen/normal_padding"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/track_hint"
                android:textSize="@dimen/above_medium_text_size"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/track_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:textColor="@color/black"
                android:cursorVisible="true"
                android:background="@color/white"


                />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">



        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/timer_record"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:visibility="gone"
                android:background="@drawable/record"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"/>

            <ImageView
                android:id="@+id/timer_stop"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:background="@drawable/stop_button"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"/>

            <ImageView
                android:id="@+id/btnGps"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:background="@drawable/gps_button"
                />

            <ImageView
                android:id="@+id/btn_add_track"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:visibility="gone"
                android:background="@drawable/save_track"/>

        </LinearLayout>

    </LinearLayout>
</layout>