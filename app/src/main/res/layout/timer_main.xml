<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">


        <ImageView
                android:id="@+id/clock"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/clock_icon"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"/>

        <TextView
                android:id="@+id/countTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:56:789"
                android:layout_toRightOf="@+id/clock"
                android:layout_toEndOf="@+id/clock"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="35sp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"/>

        <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/countTimer"
                android:layout_toEndOf="@+id/countTimer"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/calorie_bg"
                android:layout_centerVertical="true" />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5678"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:id="@+id/calories_tv"
                android:layout_centerVertical="true"
                android:layout_alignRight="@+id/imageView"
                android:layout_alignEnd="@+id/imageView"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"/>

    </RelativeLayout>

</LinearLayout>