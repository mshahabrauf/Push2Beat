<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v7.widget.CardView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"

        android:layout_marginRight="10dp"
        android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"

        android:elevation="@dimen/normal_elevation"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_height="60dp"
            android:layout_width="match_parent"

            android:background="@color/secondary_dark_grey"
            android:orientation="horizontal"
            android:padding="@dimen/normal_padding"
            android:elevation="@dimen/normal_elevation"

            android:layout_gravity="center">

            <ImageView

                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ghost_icon"
                android:padding="4dp"
                android:layout_weight="1"
                android:layout_gravity="center"
              />


            <TextView
                android:id="@+id/track_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text=""
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_weight="2.5"
                android:textSize="@dimen/medium_text_size"
                />
            <Button
                android:id="@+id/start_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/secondary_red"
                android:layout_weight="1.5"
                android:layout_marginRight="@dimen/fab_margin"
                android:text="Start"
                android:textColor="@color/white"
                android:layout_gravity="center"
                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_bottom"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/secondary_dark_purple"

            android:orientation="horizontal"
            android:padding="8dp"
            android:weightSum="5"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/p2b_icon"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_gravity="center"
                android:layout_weight="2"
                />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_gravity="center"
                android:padding="@dimen/normal_margin"
                android:src="@drawable/calories_red"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/calories_burn"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1.5"

                android:textSize="@dimen/small_text_size"
                />

            <TextView
                android:id="@+id/burn_calories"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""

                android:maxLines="1"
                android:textStyle="bold"
                android:textColor="@color/secondary_red"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="0.7"
                android:padding="@dimen/small_padding"
                android:textSize="@dimen/small_text_size"
                />
        </LinearLayout>
    </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>